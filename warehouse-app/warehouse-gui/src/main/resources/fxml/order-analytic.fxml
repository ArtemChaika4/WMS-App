<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="NEVER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ua.edu.dnu.warehouse.analytics.OrderAnalyticController">
   <content>
      <StackPane prefWidth="700.0">
         <children>
            <VBox alignment="TOP_CENTER" prefWidth="700.0" spacing="10.0">
               <children>
                  <Label text="Статистична інформація за замовленнями">
                     <font>
                        <Font name="Arial Bold" size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
                  <Separator layoutX="35.0" layoutY="616.0" prefHeight="20.0" prefWidth="684.0" />
                  <VBox prefWidth="400.0" spacing="5.0" style="-fx-background-color: #11111e;">
                     <children>
                        <HBox spacing="5.0" style="-fx-background-color: white;">
                           <children>
                              <Label prefHeight="20.0" text="Загальний прибуток від продажу товарів:">
                                 <font>
                                    <Font name="Arial Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Label fx:id="totalLabel" prefHeight="20.0" text="???" underline="true">
                                 <font>
                                    <Font name="Arial Bold" size="15.0" />
                                 </font>
                              </Label>
                              <Label prefHeight="20.0" text="грн">
                                 <font>
                                    <Font name="Arial Bold" size="15.0" />
                                 </font>
                              </Label>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </HBox>
                        <HBox spacing="5.0" style="-fx-background-color: white;">
                           <children>
                              <Label prefHeight="20.0" text="Середня ціна замовлень:">
                                 <font>
                                    <Font name="Arial Bold" size="14.0" />
                                 </font>
                              </Label>
                              <Label fx:id="averagePriceLabel" prefHeight="20.0" text="???">
                                 <font>
                                    <Font name="Arial Bold" size="14.0" />
                                 </font>
                              </Label>
                              <Label prefHeight="20.0" text="грн">
                                 <font>
                                    <Font name="Arial Bold" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </HBox>
                        <HBox layoutX="15.0" layoutY="120.0" spacing="5.0" style="-fx-background-color: white;">
                           <children>
                              <Label prefHeight="20.0" text="Кількість виконаних замовлень:">
                                 <font>
                                    <Font name="Arial Bold" size="14.0" />
                                 </font>
                              </Label>
                              <Label fx:id="completedCountLabel" prefHeight="20.0" text="???">
                                 <font>
                                    <Font name="Arial Bold" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </HBox>
                        <HBox spacing="5.0" style="-fx-background-color: white;">
                           <children>
                              <Label prefHeight="20.0" text="Загальна кількість замовлень:">
                                 <font>
                                    <Font name="Arial Bold" size="14.0" />
                                 </font>
                              </Label>
                              <Label fx:id="ordersCountLabel" prefHeight="20.0" text="???">
                                 <font>
                                    <Font name="Arial Bold" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <Separator prefHeight="20.0" prefWidth="684.0" />
                  <StackPane>
                     <children>
                        <PieChart fx:id="pieChart" />
                     </children>
                  </StackPane>
                  <Separator prefHeight="20.0" prefWidth="684.0" />
                  <Label text="Топ товарів за продажами">
                     <font>
                        <Font name="Arial Bold" size="18.0" />
                     </font>
                  </Label>
                  <Separator layoutX="35.0" layoutY="61.0" prefHeight="20.0" />
                  <TableView fx:id="table" prefHeight="250.0">
                     <columns>
                        <TableColumn fx:id="nameColumn" editable="false" prefWidth="160.0" text="Назва" />
                        <TableColumn fx:id="descriptionColumn" editable="false" prefWidth="140.0" text="Опис" />
                        <TableColumn fx:id="typeColumn" editable="false" minWidth="0.0" prefWidth="100.0" text="Вид" />
                        <TableColumn fx:id="numberColumn" editable="false" prefWidth="100.0" text="Продана кількість" />
                        <TableColumn fx:id="priceColumn" editable="false" minWidth="0.0" prefWidth="90.0" text="Прибуток" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <Separator prefHeight="20.0" prefWidth="684.0" />
                  <Label text="Аналітика за реалізацією товарів">
                     <font>
                        <Font name="Arial Bold" size="18.0" />
                     </font>
                  </Label>
                  <Separator layoutX="35.0" layoutY="1007.0" prefHeight="20.0" prefWidth="684.0" />
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <DatePicker fx:id="startDate" editable="false" onAction="#updateChart" prefHeight="35.0" prefWidth="120.0" />
                        <Label text="—">
                           <font>
                              <Font name="Arial" size="16.0" />
                           </font>
                        </Label>
                        <DatePicker fx:id="endDate" editable="false" onAction="#updateChart" prefHeight="35.0" prefWidth="120.0" />
                     </children>
                  </HBox>
                  <StackPane fx:id="chartPane">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <children>
                        <BarChart fx:id="chart">
                           <xAxis>
                              <CategoryAxis side="BOTTOM" />
                           </xAxis>
                           <yAxis>
                              <NumberAxis side="LEFT" />
                           </yAxis>
                        </BarChart>
                     </children>
                  </StackPane>
               </children>
               <padding>
                  <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </StackPane>
   </content>
</ScrollPane>
